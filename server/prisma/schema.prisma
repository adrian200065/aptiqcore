generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  admin
  staff
}

enum AppointmentStatus {
  pending
  confirmed
  cancelled
  completed
  no_show
}

enum PaymentStatus {
  authorized
  captured
  refunded
  failed
}

enum AvailabilityExceptionType {
  blocked
  available
}

enum ExternalProvider {
  google
  outlook
  icloud
}

model Business {
  id              String   @id @default(uuid()) @db.Uuid
  name            String
  timezone        String   @default("America/Chicago")
  minLeadMinutes  Int      @default(60) @map("min_lead_minutes")
  maxFutureDays   Int      @default(90) @map("max_future_days")
  maxApptsPerDay  Int      @default(999) @map("max_appts_per_day")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  users            User[]
  staff            Staff[]
  clients          Client[]
  services         Service[]
  resources        Resource[]
  businessBlackouts BusinessBlackout[]
  appointments     Appointment[]
  payments         Payment[]

  @@map("businesses")
}

model User {
  id         String   @id @default(uuid()) @db.Uuid
  businessId String   @db.Uuid @map("business_id")
  email      String   @unique
  passwordHash String @map("password_hash")
  role       UserRole
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  business Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  staff    Staff?

  @@map("users")
}

model Staff {
  id         String   @id @default(uuid()) @db.Uuid
  businessId String   @db.Uuid @map("business_id")
  userId     String?  @unique @db.Uuid @map("user_id")
  name       String
  colorHex   String?  @map("color_hex")
  isActive   Boolean  @default(true) @map("is_active")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  business  Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  services  ServiceStaff[]
  availabilityRules AvailabilityRule[]
  availabilityExceptions AvailabilityException[]
  appointments Appointment[]
  externalCalendars ExternalCalendar[]

  @@map("staff")
}

model Client {
  id         String   @id @default(uuid()) @db.Uuid
  businessId String   @db.Uuid @map("business_id")
  email      String?
  phone      String?
  firstName  String?  @map("first_name")
  lastName   String?  @map("last_name")
  notes      String?
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  business Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  appointments Appointment[]
  appointmentAttendees AppointmentAttendee[]
  payments Payment[]

  @@map("clients")
}

model Service {
  id               String   @id @default(uuid()) @db.Uuid
  businessId       String   @db.Uuid @map("business_id")
  name             String
  description      String?
  durationMinutes  Int      @map("duration_minutes")
  bufferBeforeMin  Int      @default(0) @map("buffer_before_min")
  bufferAfterMin   Int      @default(0) @map("buffer_after_min")
  basePriceCents   Int      @default(0) @map("base_price_cents")
  currency         String   @default("USD")
  isGroup          Boolean  @default(false) @map("is_group")
  capacity         Int      @default(1)
  slotStepMinutes  Int      @default(15) @map("slot_step_minutes")
  isActive         Boolean  @default(true) @map("is_active")
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")

  business Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  staffAssignments ServiceStaff[]
  resourceAssignments ServiceResource[]
  appointments Appointment[]

  @@map("services")
}

model ServiceStaff {
  serviceId String @db.Uuid @map("service_id")
  staffId   String @db.Uuid @map("staff_id")

  service Service @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  staff   Staff   @relation(fields: [staffId], references: [id], onDelete: Cascade)

  @@id([serviceId, staffId])
  @@map("service_staff")
}

model Resource {
  id         String   @id @default(uuid()) @db.Uuid
  businessId String   @db.Uuid @map("business_id")
  name       String
  capacity   Int      @default(1)
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  business Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  serviceAssignments ServiceResource[]

  @@map("resources")
}

model ServiceResource {
  serviceId  String @db.Uuid @map("service_id")
  resourceId String @db.Uuid @map("resource_id")

  service  Service  @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  resource Resource @relation(fields: [resourceId], references: [id], onDelete: Cascade)

  @@id([serviceId, resourceId])
  @@map("service_resources")
}

model AvailabilityRule {
  id         String   @id @default(uuid()) @db.Uuid
  staffId    String   @db.Uuid @map("staff_id")
  weekday    Int
  startTime  DateTime @db.Time @map("start_time")
  endTime    DateTime @db.Time @map("end_time")
  isActive   Boolean  @default(true) @map("is_active")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  staff Staff @relation(fields: [staffId], references: [id], onDelete: Cascade)

  @@map("availability_rules")
}

model AvailabilityException {
  id        String   @id @default(uuid()) @db.Uuid
  staffId   String   @db.Uuid @map("staff_id")
  startAt   DateTime @map("start_at")
  endAt     DateTime @map("end_at")
  reason    String?
  type      AvailabilityExceptionType
  createdAt DateTime @default(now()) @map("created_at")

  staff Staff @relation(fields: [staffId], references: [id], onDelete: Cascade)

  @@map("availability_exceptions")
}

model BusinessBlackout {
  id         String   @id @default(uuid()) @db.Uuid
  businessId String   @db.Uuid @map("business_id")
  startAt    DateTime @map("start_at")
  endAt      DateTime @map("end_at")
  reason     String?
  createdAt  DateTime @default(now()) @map("created_at")

  business Business @relation(fields: [businessId], references: [id], onDelete: Cascade)

  @@map("business_blackouts")
}

model Appointment {
  id         String   @id @default(uuid()) @db.Uuid
  businessId String   @db.Uuid @map("business_id")
  serviceId  String   @db.Uuid @map("service_id")
  staffId    String   @db.Uuid @map("staff_id")
  clientId   String?  @db.Uuid @map("client_id")
  startAt    DateTime @map("start_at")
  endAt      DateTime @map("end_at")
  status     AppointmentStatus
  notes      String?
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  business Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  service  Service  @relation(fields: [serviceId], references: [id], onDelete: Restrict)
  staff    Staff    @relation(fields: [staffId], references: [id], onDelete: Restrict)
  client   Client?  @relation(fields: [clientId], references: [id], onDelete: SetNull)
  attendees AppointmentAttendee[]
  payments  Payment[]

  @@map("appointments")
}

model AppointmentAttendee {
  appointmentId String @db.Uuid @map("appointment_id")
  clientId      String @db.Uuid @map("client_id")

  appointment Appointment @relation(fields: [appointmentId], references: [id], onDelete: Cascade)
  client      Client      @relation(fields: [clientId], references: [id], onDelete: Cascade)

  @@id([appointmentId, clientId])
  @@map("appointment_attendees")
}

model Payment {
  id               String   @id @default(uuid()) @db.Uuid
  businessId       String   @db.Uuid @map("business_id")
  appointmentId    String?  @db.Uuid @map("appointment_id")
  clientId         String?  @db.Uuid @map("client_id")
  provider         String
  providerChargeId String   @map("provider_charge_id")
  amountCents      Int      @map("amount_cents")
  currency         String
  status           PaymentStatus
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")

  business Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  appointment Appointment? @relation(fields: [appointmentId], references: [id], onDelete: SetNull)
  client Client? @relation(fields: [clientId], references: [id], onDelete: SetNull)

  @@map("payments")
}

model ExternalCalendar {
  id            String   @id @default(uuid()) @db.Uuid
  staffId       String   @db.Uuid @map("staff_id")
  provider      ExternalProvider
  externalId    String   @map("external_id")
  accessToken   String   @map("access_token")
  refreshToken  String?  @map("refresh_token")
  tokenExpiresAt DateTime? @map("token_expires_at")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  staff Staff @relation(fields: [staffId], references: [id], onDelete: Cascade)
  busyBlocks ExternalBusyBlock[]

  @@map("external_calendars")
}

model ExternalBusyBlock {
  id                 String   @id @default(uuid()) @db.Uuid
  externalCalendarId String   @db.Uuid @map("external_calendar_id")
  startAt            DateTime @map("start_at")
  endAt              DateTime @map("end_at")
  summary            String?
  createdAt          DateTime @default(now()) @map("created_at")

  externalCalendar ExternalCalendar @relation(fields: [externalCalendarId], references: [id], onDelete: Cascade)

  @@map("external_busy_blocks")
}

model AdminUser {
  id           String        @id @default(uuid()) @db.Uuid
  username     String        @unique
  passwordHash String        @map("password_hash")
  createdAt    DateTime      @default(now()) @map("created_at")
  updatedAt    DateTime      @updatedAt @map("updated_at")

  sessions     AdminSession[]

  @@map("admin_users")
}

model AdminSession {
  id         String    @id @default(uuid()) @db.Uuid
  adminUserId String   @db.Uuid @map("admin_user_id")
  token      String    @unique
  expiresAt  DateTime  @map("expires_at")
  createdAt  DateTime  @default(now()) @map("created_at")

  adminUser AdminUser @relation(fields: [adminUserId], references: [id], onDelete: Cascade)

  @@map("admin_sessions")
}
